@model   Signaler.Models.RegisterViewModel
<div class="card">
    <div class="card-header">
        Register to aplication
    </div>
    <div class="card-body">
        <form method="post" asp-action="Register" asp-controller="Account">
            <div class="row m-2">
                <div class="col">
                    <span asp-validation-summary="All" class="text-danger"></span>
                </div>
            </div>
            <div class="row m-2">
                <div class="form-group">
                    <div class="col-12">
                        <label asp-for="Username">User Name:</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Email">Email:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Username">Password:</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Confirm">Password Confirm:</label>
                        <input asp-for="Confirm" class="form-control" />
                        <span asp-validation-for="Confirm" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row m-2">
                <div class="col-12">
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>